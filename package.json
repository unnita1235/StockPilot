{
  "name": "stockpilot",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:server\"",
    "dev:frontend": "next dev --turbopack -p 9002",
    "dev:server": "cd backend && npm run start:dev",
    "build": "next build",
    "start": "next start",
    "start:server": "cd backend && npm run start:prod",
    "seed": "echo 'Seeding not yet implemented for NestJS'",
    "install:all": "npm install && cd backend && npm install",
    "genkit:dev": "genkit start -- tsx src/ai/dev.ts",
    "genkit:watch": "genkit start -- tsx --watch src/ai/dev.ts",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky"
